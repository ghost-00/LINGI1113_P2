                             24 ;--------------------------------------------------------
                             25 ; overlayable bit register bank
                             26 ;--------------------------------------------------------
                             27 	.area BIT_BANK	(REL,OVR,DATA)
   0000                      28 bits:
   0000                      29 	.ds 1
                             30 
                    0000     31 	ar0 = 0x00
                    0001     32 	ar1 = 0x01
                             33 
                             34 	.area HOME    (CODE)
                             35 
                             36 ; Pop registers r0..r7 & bits from xstack
                             37 ; Expect mask in B
   0000                      38 __sdcc_xpop_regs_bits::
   0000 12s00r00             39 	lcall	__sdcc_xpop_regs
   0003 C0 00                40 	push	ar0
   0005 A8*00                41 	mov	r0,_spx
   0007 18                   42 	dec	r0
   0008 E2                   43 	movx	a,@r0		;pop bits
   0009 F5*00                44 	mov	bits,a
   000B 15*00                45 	dec	_spx
   000D D0 00                46 	pop	ar0
   000F 22                   47 	ret
