                             24 ;--------------------------------------------------------
                             25 ; overlayable bit register bank
                             26 ;--------------------------------------------------------
                             27 	.area BIT_BANK	(REL,OVR,DATA)
   0000                      28 bits:
   0000                      29 	.ds 1
                             30 
                    0000     31 	ar0 = 0x00
                    0001     32 	ar1 = 0x01
                             33 
                             34 	.area HOME    (CODE)
                             35 
                             36 ; Push registers r0..r7 & bits on xstack (r0 always)
                             37 ; Expect allocation size in ACC and mask in B
   0000                      38 __sdcc_xpush_regs_r0::
   0000 C0 00                39 	push	ar0
   0002 12s00r00             40 	lcall	__sdcc_xpush_regs
   0005 D0 E0                41 	pop	acc
   0007 F2                   42 	movx	@r0,a
   0008 F8                   43 	mov	r0,a
   0009 22                   44 	ret
