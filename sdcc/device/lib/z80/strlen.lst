                             31 	.globl _strlen
                             32 
                             33 ; The Z80 has the cpir instruction, which is perfect for implementing strlen().
                             34 
   0000                      35 _strlen:
   0000 C1                   36 	pop	bc
   0001 E1                   37 	pop	hl
   0002 E5                   38 	push	hl
   0003 C5                   39 	push	bc
   0004 AF                   40 	xor	a, a
   0005 47                   41 	ld	b, a
   0006 4F                   42 	ld	c, a
   0007 ED B1                43 	cpir
   0009 21 FF FF             44 	ld	hl, #-1
   000C ED 42                45 	sbc	hl, bc	; C flag still cleared from xor above.
   000E C9                   46 	ret
